{
  "name": "1kit",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": {
    "name": "goyalsamarth",
    "url": "https://goyalsamarth.com"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/igoyalsamarth/1kit"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "build:cli": "turbo --filter=create-1kit-app build",
    "dev": "turbo run dev --parallel",
    "create-1kit-app:prod": "turbo --filter=create-1kit-app start:prod",
    "create-1kit-app:build": "turbo --filter=create-1kit-app build",
    "create-1kit-app:test": "turbo --filter=create-1kit-app test",
    "create-1kit-app": "npm run create-1kit-app:build && cd example && node ../packages/create-1kit-app/dist/index.js",
    "www:dev": "turbo --filter=www dev",
    "www:build": "turbo --filter=www build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "preview": "turbo run preview",
    "typecheck": "turbo run typecheck",
    "format:check": "turbo run format:check",
    "format:write": "turbo run format:write",
    "check": "turbo lint typecheck format:check",
    "release": "changeset version",
    "pub:beta": "cd packages/create-1kit-app && pnpm pub:beta",
    "pub:release": "cd packages/create-1kit-app && pnpm pub:release",
    "test": "turbo run test --filter=!create-1kit-app --force",
    "prepare": "husky"
  },
  "keywords": [],
  "license": "ISC",
  "packageManager": "pnpm@10.11.1",
  "dependencies": {
    "@babel/core": "^7.27.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@manypkg/cli": "^0.24.0",
    "@typescript-eslint/parser": "^8.33.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-turbo": "^2.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "motion": "^12.16.0",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "pretty-quick": "^4.2.2",
    "tailwindcss": "3.4.6",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.4",
    "turbo": "^2.5.4",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "husky": "^9.1.7",
    "typescript": "^5.8.3"
  }
}
